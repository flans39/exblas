BLASDIR	= /opt/magma-1.3.0
CUDADIR	= /usr/local/cuda-5.0

CC	= $(CUDADIR)/bin/nvcc
#CXX	= g++

OPTS	= -O2
CFLAGS	= -I../include -I/usr/include/atlas -I$(BLASDIR)/include $(OPTS) -I/usr/include/x86_64-linux-gnu -DADD_ -DBENCHMARK_MAGMA
LDFLAGS = -L/usr/lib -lblas -llapack -lc -L$(CUDADIR)/lib64 -lcudart -lcublas -L$(BLASDIR)/lib -lmagma -lmagmablas

ARCH	= ar
ARCHFLAGS	= cr
RANLIB	= ranlib
